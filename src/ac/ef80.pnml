	template_2cc_std(1, 32)
}

spriteset(spriteset_ef80_cc, "gfx/ef80.png") {
	template_2cc_std(1, 64)
}



spriteset(spriteset_ef80_purchase, "gfx/ef80.png") {
	template_purchase(1, 128)
}

spriteset(spriteset_ef80_purchase_nologo, "gfx/ef80.png") {
	template_purchase_nologo(1, 128)
}

switch(FEAT_TRAINS, SELF, switch_ef80_yeardep_livery, build_year) {
	0..1980: spriteset_ef80_old_red;
    spriteset_ef80_new_red;
}

//maybe add switch to make tokkyu livery if pax are attached (also ef65)

switch(FEAT_TRAINS, SELF, switch_ef80_livery, cargo_subtype) {
	1: spriteset_ef80_old_red;
	2: spriteset_ef80_new_red;
	3: spriteset_ef80_cc;
	switch_ef80_yeardep_livery;
}

switch(FEAT_TRAINS, SELF, switch_ef80_livery_cc, cargo_subtype) {
	1: spriteset_ef80_old_red;
	2: spriteset_ef80_new_red;
	3: switch_ef80_yeardep_livery;
  spriteset_ef80_cc;
	
}

switch(FEAT_TRAINS, SELF, switch_ef80_subtype_text, cargo_subtype) {
	0: return string(STR_REFIT_YEARDEP);
	1: return string(STR_REFIT_PINK);
	2: return string(STR_REFIT_RED);
	3: return string(STR_REFIT_CC);
	   return CB_RESULT_NO_TEXT;
	}

switch(FEAT_TRAINS, SELF, switch_ef80_subtype_text_cc, cargo_subtype) {
	0: return string(STR_REFIT_CC);
	1: return string(STR_REFIT_PINK);
	2: return string(STR_REFIT_RED);
	3: return string(STR_REFIT_YEARDEP);
	   return CB_RESULT_NO_TEXT;
	}

switch(FEAT_TRAINS, SELF, switch_ef80_purchase, param_purchaselogo) {
	1: spriteset_ef80_purchase;
	spriteset_ef80_purchase_nologo;
}

switch(FEAT_TRAINS, SELF, switch_ef80_subtype_text_cc_mode, param_ccmode) {
	1: switch_ef80_subtype_text_cc;
   switch_ef80_subtype_text;
}

switch(FEAT_TRAINS, SELF, switch_ef80_livery_cc_mode, param_ccmode) {
	1: switch_ef80_livery_cc;
   switch_ef80_livery;
}

