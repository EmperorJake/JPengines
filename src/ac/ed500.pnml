	template_2cc_std(1, 1)
}

spriteset(spriteset_ed500_cc, "gfx/ed500.png") {
	template_2cc_std(1, 32)
}

spriteset(spriteset_ed500_purchase, "gfx/ed500.png") {
	template_purchase(1, 96)
}

spriteset(spriteset_ed500_purchase_nologo, "gfx/ed500.png") {
	template_purchase_nologo(1, 96)
}

switch(FEAT_TRAINS, SELF, switch_ed500_purchase, param_purchaselogo) {
	1: spriteset_ed500_purchase;
	spriteset_ed500_purchase_nologo;
}

switch(FEAT_TRAINS, SELF, switch_ed500_livery, cargo_subtype) {
	1: spriteset_ed500_cc;
	spriteset_ed500_jrf;
}

switch(FEAT_TRAINS, SELF, switch_ed500_livery_cc, cargo_subtype) {
	1: spriteset_ed500_jrf;
	spriteset_ed500_cc;
}

switch(FEAT_TRAINS, SELF, switch_ed500_subtype_text, cargo_subtype) {
	0: return string(STR_REFIT_EXP);
	1: return string(STR_REFIT_CC);
	   return CB_RESULT_NO_TEXT;
}

switch(FEAT_TRAINS, SELF, switch_ed500_subtype_text_cc, cargo_subtype) {
	1: return string(STR_REFIT_EXP);
	0: return string(STR_REFIT_CC);
	   return CB_RESULT_NO_TEXT;
}

switch(FEAT_TRAINS, SELF, switch_ed500_subtype_text_cc_mode, param_ccmode) {
	1: switch_ed70_subtype_text_cc;
   switch_ed70_subtype_text;
}

switch(FEAT_TRAINS, SELF, switch_ed500_livery_cc_mode, param_ccmode) {
	1: switch_ed500_livery_cc;
   switch_ed500_livery;
}

